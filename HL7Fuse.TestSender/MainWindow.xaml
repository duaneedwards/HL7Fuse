<Window x:Class="HL7Fuse.TestSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HL7Fuse.TestSender"
        mc:Ignorable="d"
        Title="HL7 Message Sender" Height="456.392" Width="643.324">
    <Grid>
        <TextBox x:Name="txtMessage" Margin="19,84,24,39" TextWrapping="Wrap" AcceptsReturn="True" Text=""/>
