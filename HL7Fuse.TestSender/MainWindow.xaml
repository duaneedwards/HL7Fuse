        <TextBox x:Name="txtRemotePort" HorizontalAlignment="Left" Height="23" Margin="103,45,0,0" TextWrapping="Wrap" Text="51000" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblRemotePort" Content="Remote Port" HorizontalAlignment="Left" Margin="19,41,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSend" Content="Send" Margin="0,16,24,0" Click="btnSend_Click" Height="51" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
